---
interface Props {
  slug: string;
  title: string;
  growthStage?: string;
  thumbnail?: string;
}

const { slug, title, growthStage, thumbnail } = Astro.props;
---

<a
  href={`/garden/${slug}`}
  class="block transition duration-500 ease-in-out hover:-translate-y-1"
>
  <article
    class="bg-white dark:bg-gray-800 shadow-md rounded-md p-6 h-full text-center"
  >
    <!-- Growth stage placeholder - we'll add this later -->
    {
      growthStage && (
        <div class="grid place-items-center mb-3">
          <span class="text-sm text-gray-500 dark:text-gray-400">
            {growthStage}
          </span>
        </div>
      )
    }

    <h2 class="text-2xl font-semibold mb-4 dark:text-white">
      {title}
    </h2>

    {
      thumbnail && (
        <img
          src={thumbnail}
          alt={`Thumbnail for ${title}`}
          class="w-full h-auto rounded"
        />
      )
    }
  </article>
</a>
