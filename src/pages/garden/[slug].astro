---

<BaseLayout>
  <article class="grid grid-cols-12 pb-4">
    <div class="w-full col-start-1 col-span-12 grid grid-cols-12">
      <div class="col-start-2 col-span-10 w-full pb-4">
        <a href="/" class="block text-gray-400 mt-8">‚Üê Go Back</a>
      </div>

      <div class="col-start-2 col-span-10 w-full bg-white dark:bg-darkBgCol px-10 shadow-md pb-12">
        <div class="pb-6">
          <div class="border-b border-slate-300 border-solid pt-12 pb-2 text-center">
            <h1 class="text-3xl pb-4">{note.data.title}</h1>

            <div class="grid grid-rows-1 grid-cols-2 pt-4 text-sm text-gray-400">
              <span class="place-self-start">
                <b class="text-gray-500">First Planted</b>: {formatDate(note.data.firstPlanted)}
              </span>
              <span class="place-self-end">
                <b class="text-gray-500">Last Tended</b>: {formatDate(note.data.lastTended)}
              </span>
            </div>
          </div>
        </div>

        {/* TODO: Add TableOfContents component */}

        <div class="mt-4 prose max-w-none">
          <Content />
        </div>

        {/* TODO: Add RelatedNotes component here */}
        {/* TODO: Add Backlinks component here */}
        {/* TODO: Add Series navigation (prev/next) here */}
      </div>
    </div>
  </article>
</BaseLayout>
