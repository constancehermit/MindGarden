---
import BaseLayout from "../layouts/baseLayout.astro";
import NoteCard from "../components/NoteCard.astro";
import { getCollection } from "astro:content";

const notes = (await getCollection("garden")).sort(
  (a, b) =>
    new Date(b.data.lastTended).getTime() -
    new Date(a.data.lastTended).getTime(),
);
---

<BaseLayout>
  <div class="font-sans px-4">
    <h1 class="text-4xl text-center pt-8 pb-6">The Garden</h1>

    <div class="text-center max-w-4xl mx-auto">
      <div class="p-4 lg:px-8 md:p-4 mb-8">
        <span class="prose dark:prose-invert">
          A place where I plant and tend to my half-finished thoughts.
        </span>
      </div>
    </div>

    <section aria-labelledby="notes-heading" class="max-w-7xl mx-auto">
      <h2 id="notes-heading" class="sr-only">Garden Notes</h2>

      <div class="columns-1 sm:columns-2 lg:columns-3 gap-4 pb-8">
        {
          notes.map(({ id, data }) => (
            <div class="break-inside-avoid mb-4">
              <NoteCard
                slug={id}
                title={data.title}
                growthStage={data.growthStage}
                thumbnail={data.thumbnail}
              />
            </div>
          ))
        }
      </div>
    </section>
  </div>
</BaseLayout>
